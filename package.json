{
  "name": "copymany",
  "displayName": "CopyMany",
  "description": "A VS Code extension for copying multiple files with their paths to the clipboard.",
  "version": "0.2.3",
  "author": "vincolus",
  "publisher": "vincolus",
  "icon": "images/icon_128x128.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincolus/copymany.git"
  },
  "engines": {
    "vscode": ">=1.92.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "copymany.copyFilesWithPaths",
        "title": "Copy Files + Paths",
        "shortTitle": "Copy File(s) + Path(s)",
        "category": "Edit",
        "icon": "images/icon.svg"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "copymany.copyFilesWithPaths",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "copymany.copyFilesWithPaths",
          "when": "resourceScheme == 'file' || resourceScheme == 'folder'",
          "group": "5_open"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CopyMany Configuration",
      "properties": {
        "copymany.maxFileSizeMB": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "description": "Maximale Dateigröße in MB für das Kopieren von Dateien."
        },
        "copymany.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*.DS_Store",
            "Thumbs.db",
            "ehthumbs.db",
            "Desktop.ini",
            ".git/",
            ".svn/",
            ".hg/",
            ".gitignore",
            "node_modules/",
            "bun.lockb",
            "package-lock.json",
            "yarn.lock",
            "pnpm-lock.yaml",
            "dist/",
            "build/",
            "coverage/",
            "bower_components/",
            "jspm_packages/",
            "public/",
            "public_html/",
            "static/",
            "public/js/",
            "public/css/",
            "__pycache__/",
            "*.pyc",
            "*.pyo",
            "*.pyd",
            "env/",
            "venv/",
            "ENV/",
            "VENV/",
            "target/",
            "*.class",
            "*.jar",
            "*.war",
            "*.ear",
            "bin/",
            "obj/",
            "*.csproj.user",
            "*.suo",
            "*.user",
            "*.userosscache",
            "*.sln.docstates",
            "pkg/",
            "Cargo.lock",
            "lib/",
            "*.o",
            "*.a",
            "*.obj",
            "*.lib",
            "vendor/",
            "composer.lock",
            ".bundle/",
            "vendor/bundle/",
            "log/",
            "tmp/",
            ".dart_tool/",
            ".packages",
            "*.psd",
            "*.ai",
            "*.indd",
            "*.eps",
            "*.pdf",
            "*.pdb",
            "*.fla",
            "*.swf",
            "*.exe",
            "*.dll",
            "*.exp",
            "*.so",
            "*.dylib",
            "*.ttf",
            "*.otf",
            "*.bin",
            "*.d",
            "*.dat",
            "*.iso",
            "*.img",
            "*.msi",
            "*.apk",
            "*.app",
            "*.deb",
            "*.rpm",
            "*.pkg",
            "*.7z",
            "*.zip",
            "*.tar",
            "*.gz",
            "*.rar",
            "*.bz2",
            "*.xz",
            "*.lz",
            "*.lzma",
            "*.zst",
            "*.map",
            "*.vsix",
            "*.mod",
            "*.sum",
            "*.tmp",
            "*.temp",
            "*.log",
            "*.cache",
            "*.bak",
            "*.swp",
            "*.swo",
            ".vscode/",
            ".idea/",
            "*.code-workspace",
            "docs/_build/",
            "docs/build/",
            ".nyc_output/",
            "logs/",
            "database/",
            "qtbox/",
            "raylib/"
          ],
          "description": "Liste von Glob-Mustern, die beim Kopieren von Dateien ignoriert werden. Unterstützt Wildcards wie *.pyc und Verzeichnisse wie node_modules/."
        },
        "copymany.whitelistPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of glob patterns to include when copying files. If set, only files matching these patterns will be considered."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "bun run tsc -p ./",
    "watch": "bun run tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "bun run eslint src --ext ts",
    "test": "bun run node ./out/test/runTest.js",
    "package": "bun run vscode:prepublish && bun run vsce package",
    "publish": "bun run package && bun run vsce publish",
    "install": "code --install-extension copymany-0.2.0.vsix 2>/dev/null || echo 'Extension not installed.'",
    "uninstall": "code --uninstall-extension vincolus.copymany 2>/dev/null || echo 'Extension not installed.'",
    "dev": "bun run uninstall && bun run vscode:prepublish && bun run package && bun run install"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/micromatch": "^4.0.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.92.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^5.6.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "ignore": "^6.0.2",
    "isbinaryfile": "^5.0.4",
    "micromatch": "^4.0.4",
    "rimraf": "^6.0.1"
  }
}
